{
  "name": "@games/guessing",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "npx --yes electron@latest .",
    "electron-dev": "concurrently --names \"vite,electron\" --prefix-colors \"blue,green\" --kill-others \"pnpm run dev\" \"sleep 3 && wait-on tcp:localhost:5173 -t 10000 && echo '[electron] Starting Electron...' && NODE_ENV=development npx --yes electron@latest .\"",
    "electron-build": "pnpm run build && npx --yes electron@latest .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@games/shared": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}

