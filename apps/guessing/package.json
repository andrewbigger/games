{
  "name": "@games/guessing",
  "productName": "Guessing Game",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "electron/main.js",
  "author": "Andrew Bigger",
  "homepage": "https://biggerconcept.com",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "npx --yes electron@latest .",
    "electron-dev": "concurrently --names \"vite,electron\" --prefix-colors \"blue,green\" --kill-others \"pnpm run dev\" \"sleep 3 && wait-on tcp:localhost:5173 -t 10000 && echo '[electron] Starting Electron...' && NODE_ENV=development npx --yes electron@latest .\"",
    "electron-build": "pnpm run build && npx --yes electron@latest .",
    "type-check": "tsc --noEmit",
    "dist-mac": "pnpm --filter @games/shared build && pnpm run build && electron-builder --mac",
    "dist-linux": "pnpm --filter @games/shared build && pnpm run build && electron-builder --linux",
    "dist-windows": "pnpm --filter @games/shared build && pnpm run build && electron-builder --win"
  },
  "dependencies": {
    "@games/shared": "workspace:*",
    "lucide-react": "^0.555.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.games.guessing",
    "productName": "Guessing",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  }
}
